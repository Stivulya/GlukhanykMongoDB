<Window x:Class="WpfSocialNetwork.NewComment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSocialNetwork"
        mc:Ignorable="d"
        Title="NewComment" Height="200" Width="350">
    <Grid RenderTransformOrigin="0.503,0.404">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="LemonChiffon" Offset="0"/>
                <GradientStop Color="LemonChiffon" Offset="0.256"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Button Content="Назад" HorizontalAlignment="Left" Margin="19,116,0,0" VerticalAlignment="Top" Width="77" Height="41" Click="Back" FontFamily="Segoe UI Black" Background="Red" FontSize="18"/>
        <Button Content="Готово" HorizontalAlignment="Left" Margin="248,116,0,0" VerticalAlignment="Top" Width="73" Height="41" Click="Add" FontFamily="Segoe UI Black" Background="Red" RenderTransformOrigin="2.426,8.116" FontSize="18"/>
        <TextBox Name="Text" Margin="19,22,21,68"  AcceptsReturn="True"  FontFamily="Champagne &amp; Limousines" FontSize="22" Foreground="Black" Background="Red" />

    </Grid>
</Window>
